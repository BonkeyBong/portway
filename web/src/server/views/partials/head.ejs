<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <%- include('meta-tags', { robots: robots }); %>
  <% if (typeof css !== 'undefined') { %>
    <% css.forEach(function(bundle) { %>
    <% if (bundle) { %>
    <link rel="stylesheet" href="/<%= bundle %>" />
    <% } %>
    <% }) %>
  <% } %>
</head>
<!-- change theme-default to theme--salmon or theme--yellow -->
<body class="theme--default <% if (typeof permalink !== 'undefined') { %><%= permalink %><% } %>">
