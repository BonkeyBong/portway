<form class="login-form" action="/sign-up/registration" method="post">
  <input type="hidden" name="source" value="<%= source %>" />
  <div class="field-container">
    <div class="field">
      <label class="label" for="name">Your name</label>
      <div class="field__control">
        <input id="name" class="input" type="text" name="name" placeholder="Name" autocomplete="section-signup given-name" required />
      </div>
    </div>
  </div>
  <!-- /name -->
  <div class="field-container">
    <div class="field">
      <label class="label" for="email">Email address</label>
      <div class="field__control">
        <input id="email" class="input" type="email" name="email" placeholder="email@domain.com" autocomplete="section-signup username" required>
        <p class="small">Your email address will be your username</p>
      </div>
    </div>
  </div>
  <div class="field-container field-container--row">
    <div class="field field--checkbox">
      <label class="label" for="tos">I agree to the <a href="<%= termsLink %>" target="_blank" rel="noopener noreferrer">terms of service</a></label>
      <div class="field__control">
        <input id="tos" class="input" type="checkbox" name="tos" required>
      </div>
    </div>
  </div>
  <div class="field-container field-container--with-space">
    <div class="field field--centered">
      <%
        if (typeof button === 'undefined') {
          var button = 'Create my account'
        }
      %>
      <input id="signup-button" type="submit" class="button" value="<%= button %>" disabled>
    </div>
  </div>
</form>
<!-- /sign-up -->
