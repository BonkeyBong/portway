{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "Actions/*": ["src/client/js/actions/*"],
      "Components/*": ["src/client/js/components/*"],
      "CSS/*": ["src/client/css/*"],
      "Hooks/*": ["src/client/js/hooks/*"],
      "Libs/*": ["src/client/js/libs/*"],
      "Loc/*": ["src/client/js/loc/*"],
      "Sections/*": ["src/client/js/sections/*"],
      "Shared/*": ["src/shared/*"],
      "Utilities/*": ["src/utilities/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
