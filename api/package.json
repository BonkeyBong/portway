{
  "name": "project-danger-api",
  "version": "1.0.0",
  "description": "Project Danger API",
  "scripts": {
    "serve": "NODE_ENV=development nodemon --exec babel-node --require node_modules/dotenv/config -- src/server.js",
    "build": "NODE_ENV=production babel ./src -d dist/ --copy-files",
    "start": "NODE_ENV=production node ./dist/server.js",
    "babel-node": "babel-node",
    "test": "jest",
    "test-u": "jest 'src/.*\\.test-(u)\\.js$'",
    "lint": "eslint src",
    "migrate": "sequelize db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/BonkeyBong/project-danger.git"
  },
  "author": "BonkeyBong, LLC",
  "license": "ISC",
  "lint-staged": {
    "linters": {
      "*.{js}": [
        "pretty-quick --staged",
        "eslint src/ --fix",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "babel-preset-env": "^1.7.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.13.0",
    "eslint-plugin-prettier": "^3.0.1",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.4",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "ono": "^5.0.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "stripe": "^6.23.1"
  },
  "jest": {
    "testRegex": "src/.*\\.test-(u|a|i)\\.js$",
    "verbose": true,
    "testEnvironment": "node"
  }
}
